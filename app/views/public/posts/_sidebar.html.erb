
<!-- postコントローラのサイドバーの部分テンプレート-->

<!-- サイドバー部分 -->
<div class="col-xs-1">
</div>
<div class="col-xs-3 bg-lightgray">
  <!-- 人気の募集部分 -->
    <table class="table">
      <thead>
        <tr class="d-flex">
          <th class="col-xs-8"><h3>人気の募集</h3></th>
        </tr>
      </thead>
      <% @hotPosts.each do |hotPost|%>
        <tbody>
          <tr class="d-flex">
            <td>
              <h4><%= link_to hotPost.title, public_post_path(hotPost.id) %></h4>
              <h6>-いいね:<%= hotPost.concerns.count %>件, コメント:<%= hotPost.comments.count%>件</h6>
              <h6>-更新日:<%= hotPost.updated_at.strftime("%Y-%m-%d")%></h6>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <!-- 人気の募集部分ここまで -->
    <!-- 人気のタグ部分 -->
    <table class="table">
      <thead class="thead-dark">
        <tr class="d-flex">
          <th class="col-xs-8"><h3>人気のタグ</h3></th>
        </tr>
      </thead>
      <tbody>
          <tr class="d-flex">
            <td>
              <% @hotTags.each do |hotTag|%>
                <%= link_to public_searches_index_path(searchTag: hotTag.name) do %>
                  <li class="post-hotTags">
                    <%= hotTag.name %>
                  </li>
                <% end %>
              <% end %>
            </td>
          </tr>
      </tbody>
    </table>
    <!-- 人気のタグ部分ここまで -->
