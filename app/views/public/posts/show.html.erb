<!-- about部分 -->
<div class="nav-sub">
  <div class="about-us">
    Muic Ciecle へようこそ！<br>
    気軽に音楽仲間を見つけて交流できるサイトです！<br>
    まずは気軽に「気になる」ボタンを押して交流してみましょう！
  </div>
</div>
<!-- about部分ここまで -->
<!-- 新規投稿ボタン -->
<div class="post-create-btn">
  <%= link_to "新規募集投稿", new_public_post_path, class:"btn btn-primary py-0"%>
</div>
<!-- 新規投稿ボタンここまで -->


<div class="container">
  <div class="row">

    <!-- メインコンテンツ部分 -->
    <div class="col-xs-7 col-xs-offset-1">



      <br><br>


      <div class="row bg-lightgray">
        <!-- 投稿詳細部分 -->
        <div class="col-xs-9">
          <table class="table">
            <thead>
              <tr class="d-flex">
                <div class="post-title-show">
                  <th>
                    <h2 class="line-height-l">
                      <%= @post.title %>
                    </h2>
                    <!-- タグ表示部分 -->
                    <div class="post-tag">
                      <% @post.tags.each do |tag| %>
                        <%= link_to public_searches_index_path(searchTag: tag.name) do %>
                          <li class="tag-list-items">
                            <%= tag.name %>
                          </li>
                        <% end %>
                      <% end %>
                    </div>
                    <!-- タグ表示部分ここまで -->
                  </th>
                </div>
              </tr>
            </thead>
            <tbody>

              <tr class="d-flex" align="right">
                <div class="post-date-index">
                  <td><h4><%= @post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></h4></td>
                </div>
              </tr>

              <tr class="d-flex">
                <div class="post-body-index">
                  <td>
                    <h4><%=  simple_format(@post.body, class: "line-height-m") %></h4>
                  </td>
                </div>
              </tr>
            </tbody>
          </table>
        </div>
        <!-- 投稿詳細部分ここまで -->
        <br><br>

        <div class="col-xs-3">
          <!-- 投稿者情報部分 -->
          <div class="row" align="center">
              <%= attachment_image_tag(@post.enduser, :image, size:"50x50", fallback: "no_image.jpg") %>
              <h4><%= @post.enduser.name %></h4>
          </div>
          <table class="table">
            <tr>
              <th><h6>年代</h6></th>
              <td><h6><%= @post.enduser.age %></h6></td>
            </tr>
            <tr>
              <th><h6>地域</h6></th>
              <td><h6><%= @post.enduser.area %></h6></td>
            </tr>
          </table>
          <!-- 投稿者情報部分ここまで -->
          <!-- 募集の投稿者なら編集・削除ボタン、そうでなければチャット送信ボタンを表示 -->
          <div class="row" align="center">
            <% if enduser_signed_in? %>
              <% if @post.enduser.id == current_enduser.id %>
                <div class="post-show-navItems">
                  <%= link_to "募集内容編集", edit_public_post_path(@post.id), class:"col-xs-12 text-left"%>
                  <%= link_to "募集を削除", public_post_path, method: :delete, class:"col-xs-12 text-left"%>
                </div>
              <% else %>
              <div class="post-show-navItems">
                <!-- 気になるボタン表示部分 -->
                <div class="concern-btn">
                  <% if enduser_signed_in? %>
                    <% if current_enduser.id == @post.enduser.id %>
                      <div class="post-show-navItem glyphicon glyphicon-heart non-concern btn col-xs-12"><%= @post.concerns.count %></div>
                      <br>
                      <h6 class="post-show-navItemText">*自分の投稿</h6>
                    <% elsif @post.concerned_by?(current_enduser)  %>
                      <%= link_to "#{@post.concerns.count}",public_post_concerns_path(@post.id),method: :delete,class: "post-show-navItem glyphicon glyphicon-heart concern btn col-xs-12" %>
                      <h6 class="post-show-navItemText">気になる済</h6>
                    <% else %>
                      <%= link_to "#{@post.concerns.count}",public_post_concerns_path(@post.id),method: :post,class: "post-show-navItem glyphicon glyphicon-heart non-concern btn col-xs-12" %>
                      <br>
                      <h6 class="post-show-navItemText">気になる！</h6>
                    <% end %>
                  <% else %>
                    <span class="post-show-navItem glyphicon glyphicon-heart non-concern btn col-xs-12" aria-hidden="true"><%= @post.concerns.count %></span>
                    <br>
                    <h6 class="post-show-navItemText">気になる！</h6>
                  <% end %>
                </div>
                <!-- 気になるボタン表示部分ここまで -->
                <!-- コメントボタン表示部分 -->
                <%= link_to "#{@post.comments.count}", {anchor: "commentForm"}, class: "post-show-navItem glyphicon glyphicon-comment btn col-xs-12 post-show-commentBtn" %>
                <h6 class="post-show-navItemText">コメント</h6>
                <!-- コメントボタン表示部分ここまで -->
                <!-- ＤＭボタン表示部分 -->
                <!-- すでにチャットをしたことあれば(=@isRoomがtrueならば),roomのshowへ直接移動, なければroomのcreateアクションを行う-->
                <% if enduser_signed_in? %>
                  <% if @isRoom == true %>
                    <%= link_to "", public_room_path(@roomId), class: "post-show-navItem glyphicon glyphicon-envelope btn col-xs-12 post-show-dmBtn"%>
                  <% else %>
                    <%= form_for(@room,url:public_rooms_path) do |f|%>
                      <%= fields_for @entry do |e|%>
                        <%= e.hidden_field :enduser_id, value: @post.enduser_id %>
                      <% end %>
                      <%= button_tag( class: "btn col-xs-12 post-show-navItem post-show-dmBtn") do %>
                        <%= content_tag :span, "", class: "glyphicon glyphicon-envelope" %>
                      <% end %>
                    <% end %>
                  <% end %>
                  <h6 class="post-show-navItemText">DM</h6>
                <% end %>
                <!-- ＤＭボタン表示部分ここまで -->
              </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <!-- 編集・削除ボタン、チャット送信ボタンを表示ここまで -->
      </div>

      <!-- コメント一覧・投稿部分 -->
      <div class="post-show-commentIndex">
        <table class="table">
          <thead class="thead-dark">
            <tr class="d-flex">
              <th class="col-xs-8"><h3>コメント一覧 <%= @post.comments.count %>件</h3></th>
            </tr>
          </thead>
          <tbody>
            <% @comments.each do |comment| %>
              <tr class="d-flex">
                <td>
                  <div class="row">
                    <div class="col-xs-2">
                      <%= attachment_image_tag(comment.enduser, :image, size:"50x50", fallback: "no_image.jpg") %>
                    </div>
                    <div class="col-xs-10">
                      <%= comment.enduser.name%>
                      <br>
                      <h5><%= simple_format(comment.content) %></h5>
                    </div>
                  </div>


                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="post-show-commentForm" id="commentForm">
        <h4>コメント投稿</h4>
        <%= form_for(@comment,url: public_post_comments_path(@post.id)) do |f| %>
          <%= f.text_area :content, class: "col-xs-12 post-show-commentInput" %>
          <%= f.hidden_field :post_id, value: @post.id%>
           <%= f.submit "コメントする", class: "btn post-show-submitBrn" %>
        <% end %>
      </div>
      <!-- コメント一覧・投稿部分ここまで -->
    </div>
    <!-- メインコンテンツ部分 -->

    <!-- サイドバー部分 -->
    <%= render 'sidebar' %>
    <!-- サイドバー部分ここまで -->

  </div>
</div>
