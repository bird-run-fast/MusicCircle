<!-- about部分 -->
<div class="nav-sub">
  <div class="about-us">
    Muic Ciecle へようこそ！<br>
    気軽に音楽仲間を見つけて交流できるサイトです！<br>
    まずは気軽に「気になる」ボタンを押して交流してみましょう！
  </div>
</div>
<!-- about部分ここまで -->
<!-- 新規投稿ボタン -->
<div class="post-create-btn">
  <%= link_to "新規募集投稿", new_public_post_path, class:"btn btn-primary py-0"%>
</div>
<!-- 新規投稿ボタンここまで -->


<div class="container">
  <div class="row">

    <!-- メインコンテンツ部分 -->
    <div class="col-xs-7 col-xs-offset-1">
      <!-- 投稿詳細部分 -->
      <table class="table">
        <thead class="thead-dark">
          <tr class="d-flex">
            <div class="post-title-show">
              <th>
                <h2 class="line-height-l"><%= @post.title %></h2>
                <div class="post-tag">
                  <% @post.tags.each do |tag| %>
                  <li><%= tag.name %></li>
                  <% end %>
                </div>
              </th>
            </div>
          </tr>
        </thead>
        <tbody>

          <tr class="d-flex" align="right">
            <div class="post-date-index">
              <td>
                <h5><%= @post.created_at %></h5>
              </td>
            </div>
          </tr>

          <tr class="d-flex">
            <div class="post-body-index">
              <td>
                <h4><%=  simple_format(@post.body, class: "line-height-m") %></h4>
              </td>
            </div>
          </tr>
        </tbody>
      </table>
      <br><br>
      <!-- 投稿詳細部分ここまで -->
      <!-- 募集の投稿者なら編集・削除ボタン、そうでなければチャット送信ボタンを表示 -->
      <% if enduser_signed_in? %>
        <% if @post.enduser.id == current_enduser.id %>
          <div class="text-right">
            <%= link_to "募集を削除", public_post_path, method: :delete, class:"btn btn-danger"%>
            <%= link_to "募集内容を編集", edit_public_post_path(@post.id), class:"btn btn-primary"%>
          </div>
        <% else %>
          <div class="text-center">
            <p class="btn btn-primary btn-lg">チャットを送信</p>
          </div>
        <% end %>
      <% end %>
      <!-- 編集・削除ボタン、チャット送信ボタンを表示ここまで -->
      <br><br>
      <!-- 投稿者情報部分 -->
        <div class="post-userinfo-show">
          <h2>投稿者情報</h2>
          <div class="post-infobox-show">
            <div class="row">
              <div class="col-xs-4">
                <%= attachment_image_tag(@post.enduser, :image, size:"100x80", fallback: "no_image.jpg") %>
                <h5 align="center"><%= @post.enduser.name %></h5>
              </div>
              <div class="col-xs-8">
                <% if !@post.enduser.introduction.nil?%>
                  <p><%= @post.enduser.introduction.truncate(60, separator: "。") %></p>
                <% end %>
                <div class="">
                  <p class="btn btn-info btn-lg">フォローする</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <!-- 投稿者情報部分ここまで -->
    </div>
    <!-- メインコンテンツ部分 -->


    <!-- サイドバー部分 -->
    <%= render 'sidebar' %>
    <!-- サイドバー部分ここまで -->

  </div>
</div>
