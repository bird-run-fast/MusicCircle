<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

<h2>新規会員登録</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/devise/shared/error_messages", resource: resource %>

<table class="table">
    <tr>
        <th><%= f.label :ニックネーム %></th>
        <td>
            <%= f.text_field :name, autofocus: true, class: "name input-mysize-md", placeholder: "ニックネーム" %>
        </td>
    </tr>

    <tr>
        <th><%= f.label :メールアドレス %></th>
        <td><%= f.email_field :email, autofocus: true, class: "email input-mysize-md", placeholder: "hoge@hoge.com" %></td>
    </tr>

    <tr>
        <th><%= f.label :地域 %></th>
        <td><%= f.select :area, Enduser.areas.keys, {include_blank: "選択してください"}, {class: "input-mysize-md"} %></td>
    <tr>

    <tr>
        <th><%= f.label :年代 %></th>
        <td><%= f.select :age, Enduser.ages.keys, {include_blank: "選択してください"}, {class: "input-mysize-md"}  %></td>
    </tr>

    <tr>
        <th>
            <%= f.label :パスワード（6文字以上） %>
            <!-- @minimum_password_length とは　deviseで初期設定される変数-->
            <!-- パスワードの長さの最小値を指定している。初期値は6文字-->
            <% if @minimum_password_length %>
            <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
            <% end %>
        </th>
        <td><%= f.password_field :password, autocomplete: "new-password", class: "input-mysize-md",placeholder: "パスワード" %></td>
    </tr>

    <tr>
        <th><%= f.label :パスワード（確認用） %></th>
        <td> <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-mysize-md", placeholder: "パスワード(確認用)" %></td>
    </tr>
</table>

  <div class="actions row">
    <%= f.submit "新規登録", class: "btn btn-success col-xs-2 col-xs-offset-5" %>
  </div>

<% end %>
<br>
<h3>既にご登録済みの方</h3><br>
<%= link_to "こちら", new_enduser_session_path %>からログインしてください

  </div>
</div>
