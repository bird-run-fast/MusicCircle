<div class="row">
  <div class="col-xs-6 col-xs-offset-3">

    <h4 style="color:red" ><%= flash[:error] %></h4>
    <br><br>

    <h4>管理者の方はこちらからログイン</h4>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <table class="table">
            <tr>
                <th><%= f.label :メールアドレス %></th>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>

            <tr>
                <th><%= f.label :パスワード %></th>
                <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
        </table>

        <div class="row actions">
            <%= f.submit "ログイン", class: "btn btn-primary col-xs-offset-5 " %>
        </div>

    <% end %>

    <br><br><br>
    <%= link_to "=>一般会員の方はこちら", new_enduser_session_path %>
  </div>
</div>
